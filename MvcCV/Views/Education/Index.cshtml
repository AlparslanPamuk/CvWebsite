@model MvcCV.Models.Sınıf.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>TITLE</th>
            <th>SUBTITLE</th>
            <th>DEPARTMENT</th>
            <th>GPA</th>
            <th>DELETE</th>
            <th>UPDATE</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model.Deger3)
        {
            <tr>
                <th>@x.ID</th>
                <td>@x.TITLE</td>
                <td>@x.SUBTITLE</td>
                <td>@x.DEPARTMENT</td>
                <td>@x.GPA</td>
                <td><a href="/Education/DeleteEducation/@x.ID" class="btn btn-danger">Delete</a> </td>
                <td><a href="/Education/BringEducation/@x.ID" class="btn btn-success">Update</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Education/NewEducation/" class="btn btn-primary">Add New Education</a>

